<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Light_Background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context=".MessageActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="11dp"
            >

            <!-- Top Bar -->
            <LinearLayout
                android:id="@+id/Top_Bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/backButton"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/Light_Second_Color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="11dp"
                    android:elevation="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_back"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/Light_Second_Color"
                    android:elevation="10dp"
                    android:padding="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mensagem"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/previewButton"
                    android:clickable="true"
                    android:background="@color/Light_Second_Color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="11dp"
                    android:layout_gravity="center"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_attach_file"
                        />

                </LinearLayout>

            </LinearLayout>

            <!-- Salutation Box -->
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:elevation="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Saudação"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:weightSum="7"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/salutation_spinner"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog"
                        android:layout_margin="5dp"
                        android:background="@android:drawable/editbox_dropdown_light_frame"
                        android:elevation="5dp"

                        />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:elevation="5dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/green_900"
                        android:src="@drawable/ic_add"
                        />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:elevation="5dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/red_900"

                        android:src="@drawable/ic_remove"
                        />
                </LinearLayout>

            </LinearLayout>


            <!-- Corpo Box -->
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:elevation="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Corpo da Mensagem"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/MessageBody_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

            <!-- Dismissal Box -->
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:elevation="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Despedida"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:weightSum="7"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/dismissal_spinner"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog"
                        android:layout_margin="5dp"
                        android:background="@android:drawable/editbox_dropdown_light_frame"
                        android:elevation="5dp"
                        />

                    <ImageButton
                        android:id="@+id/plusDismissalBtn"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:elevation="5dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/green_900"
                        android:src="@drawable/ic_add"
                        />
                    <ImageView
                        android:id="@+id/minusDismissalBtn"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:elevation="5dp"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/red_900"
                        android:src="@drawable/ic_remove"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- Assinatura Box -->
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:elevation="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Assinatura"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/MessageSignature_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>
            <Button
                android:id="@+id/SendButton"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:textAllCaps="false"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>